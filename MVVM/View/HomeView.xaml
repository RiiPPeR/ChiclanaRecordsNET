<UserControl x:Class="ChiclanaRecordsNET.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChiclanaRecordsNET.MVVM.View"
             mc:Ignorable="d" 
             Height="850" Width="1130">
    <Grid Background="#660B0500">
        <StackPanel>
            <Image Source="./../../Images/upscaled.png"
                   Width="100"
                   HorizontalAlignment="Left"/>


            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Chiclana Records"
                           Foreground="White"
                           FontSize="50"
                           VerticalAlignment="Center"/>

            </StackPanel>

            <TextBlock Text="Vinyl record collection"
                           Foreground="White"
                           FontSize="30"
                           VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
