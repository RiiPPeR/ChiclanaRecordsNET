<UserControl x:Class="ChiclanaRecordsNET.MVVM.View.SearchListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChiclanaRecordsNET.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1130"
             FontFamily="./../../Font/Poppins/#Poppins">

    <Grid Background="#660B0500">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal"
                    Height="100">
            <StackPanel Orientation="Vertical" 
                    Width="500"
                    HorizontalAlignment="Left">

                <Grid Height="50"
                  HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Artista"
                           Foreground="{StaticResource color6}"
                           FontSize="20"
                           VerticalAlignment="Center"/>
                    <Border Grid.Column="1"
                            CornerRadius="10">
                        <TextBox x:Name="ArtistTextBox" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Width="300"
                                 Margin="5"
                                 Text="{Binding Artist}"
                                 HorizontalAlignment="Right"
                                 Background="{StaticResource color1transparent}"
                                 FontSize="18"
                                 Foreground="White"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                    </Border>
                </Grid>

                <Grid Height="50"
                  HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Titulo del disco"
                           Foreground="{StaticResource color6}"
                           FontSize="20"
                           VerticalAlignment="Center"/>
                    <TextBox x:Name="TitleTextBox"
                             Style="{StaticResource RoundedTextBox}"
                             Width="300" Margin="5"
                             Grid.Column="1"
                             Text="{Binding Title}"
                             HorizontalAlignment="Right"
                             Background="{StaticResource color1transparent}"
                             FontSize="18"
                             Foreground="White"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"/>
                </Grid>


            </StackPanel>

            <StackPanel Orientation="Vertical" 
                    Width="400"
                    HorizontalAlignment="Left">

                <Grid Height="50"
                  HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="País"
                           Foreground="{StaticResource color6}"
                           FontSize="20"
                           VerticalAlignment="Center"/>
                    <Border Grid.Column="1"
                            CornerRadius="10">
                        <TextBox x:Name="CountrytTextBox" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Width="300"
                                 Margin="5"
                                 Text="{Binding Country}"
                                 HorizontalAlignment="Right"
                                 Background="{StaticResource color1transparent}"
                                 FontSize="18"
                                 Foreground="White"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"/>
                    </Border>
                </Grid>

                <Grid Height="50"
                  HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Canción"
                           Foreground="{StaticResource color6}"
                           FontSize="20"
                           VerticalAlignment="Center"/>
                    <TextBox x:Name="LabelTextBox"
                             Style="{StaticResource RoundedTextBox}"
                             Width="300" Margin="5"
                             Grid.Column="1"
                             Text="{Binding Track}"
                             HorizontalAlignment="Right"
                             Background="{StaticResource color1transparent}"
                             FontSize="18"
                             Foreground="White"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"/>
                </Grid>


            </StackPanel>



            <Button Content="Buscar" 
                Command="{Binding SearchCommand}" 
                Margin="5" 
                Foreground="White"
                FontSize="25"
                Grid.Column="1"
                HorizontalAlignment="Left">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource color5}"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#99010409"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="150" Height="40"
                            CornerRadius="13"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <ScrollViewer  Grid.Row="1" VerticalScrollBarVisibility="Auto">

            <ScrollViewer.Resources>
                <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Thumb}">
                                <Border CornerRadius="5" 
                                Background="{StaticResource color1transparent}"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style TargetType="{x:Type ScrollBar}">
                    <Setter Property="Width" Value="8"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Grid>
                                    <Border Background="Transparent"/>
                                    <Track x:Name="PART_Track"
                                           IsDirectionReversed="True">
                                        <Track.Thumb>
                                            <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ScrollViewer.Resources>


